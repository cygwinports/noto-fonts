for lang in Arabic Aramaic Armenian Avestan Balinese Bamum Batak Bengali Brahmi \
	Buginese Buhid Canadian_Aboriginal Carian Cham Cherokee Coptic Cuneiform \
	Cypriot Deseret Devanagari Egyptian_Hieroglyphs Ethiopic Georgian \
	Glagolitic Gothic Gujarati Gurmukhi Hanunoo Hebrew Javanese Kaithi \
	Kannada Kayah_Li Kharoshthi Khmer Lao Lepcha Limbu Linear_B Lisu Lycian \
	Lydian Malayalam Mandaic Meetei_Mayek Mongolian Myanmar NKo Ogham \
	Ol_Chiki Oriya Osmanya Pahlavi Parthian Persian Phags_Pa Phoenician \
	Rejang Runic Samaritan Saurashtra Shavian Sinhala South_Arabian \
	Sundanese Syloti_Nagri Syriac Tagalog Tagbanwa Tai Tamil Telugu Thaana \
	Thai Tibetan Tifinagh Turkic Ugaritic Urdu Vai Yi
do
langpkg=${lang,,}
langpkg=${langpkg//_/-}
PKG_NAMES+=" noto-${langpkg}-fonts"
declare noto_${lang,,}_fonts_SUMMARY="${SUMMARY} for ${lang/_}"
declare noto_${lang,,}_fonts_REQUIRES="${NAME}-common"
declare noto_${lang,,}_fonts_CONTENTS="
	etc/fonts/conf.d/*${langpkg}*
	usr/share/fontconfig/conf.avail/*${langpkg}*
	${FONTSDIR#/}/noto/*${lang/_}*
"
noto_fonts_CONTENTS+=" --exclude=*${lang/_}* --exclude=*-${langpkg}* "
done
noto_fonts_common_CONTENTS="usr/share/doc/${NAME}/"
noto_fonts_REQUIRES="${NAME}-common"
noto_fonts_CONTENTS+="
	etc/fonts/conf.d/*-noto-*
	usr/share/fontconfig/conf.avail/*-noto-*
	${FONTSDIR#/}/noto/
"
arimo_fonts_REQUIRES="${NAME}-common"
arimo_fonts_CONTENTS="
	etc/fonts/conf.d/*-arimo-*
	usr/share/fontconfig/conf.avail/*-arimo-*
	${FONTSDIR#/}/arimo/
"
cousine_fonts_REQUIRES="${NAME}-common"
cousine_fonts_CONTENTS="
	etc/fonts/conf.d/*-cousine-*
	usr/share/fontconfig/conf.avail/*-cousine-*
	${FONTSDIR#/}/cousine/
"
tinos_fonts_REQUIRES="${NAME}-common"
tinos_fonts_CONTENTS="
	etc/fonts/conf.d/*-tinos-*
	usr/share/fontconfig/conf.avail/*-tinos-*
	${FONTSDIR#/}/tinos/
"

src_compile() { :; }

src_install() {
	cd ${S}
	fontinto ${NAME%-fonts}
	dofont unhinted/Noto*.ttf
	dofont hinted/Noto*.ttf
	fontinto arimo
	dofont hinted/Arimo*.ttf
	fontinto cousine
	dofont hinted/Cousine*.ttf
	fontinto tinos
	dofont hinted/Tinos*.ttf
	dofontconf *.conf
}
